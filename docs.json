    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "environments"
            ]
          },
          {
            "group": "Authentication",
            "pages": [
              "authentication/api-keys",
              "authentication/permissions"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Pricing",
            "pages": [
              "api-reference/pricing/single",
              "api-reference/pricing/bulk"
            ]
          },
          {
            "group": "Deliveries",
            "pages": [
              "api-reference/deliveries/create",
              "api-reference/deliveries/create-bulk",
              "api-reference/deliveries/get",
              "api-reference/deliveries/list"
            ]
          },
          {
            "group": "Payments",
            "pages": [
              "api-reference/payments/charge",
              "api-reference/payments/list-transactions",
              "api-reference/payments/get-transaction"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/overview"
            ]
          },
          {
            "group": "Real-time",
            "pages": [
              "api-reference/websocket/connection"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://chidori.africa/dashboard",
          "icon": "gauge"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@chidori.africa",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/chidori.png",
    "dark": "/logo/chidori.png",
    "href": "/"
  },
  "appearance": {
    "default": "light"
  },
  "seo": {
    "indexHiddenPages": false
  },
  "metadata": {
    "og:site_name": "Chidori API Documentation"
  },
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://chidori.africa/dashboard"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@chidori.africa"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://chidori.africa/dashboard"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/ChidoriAfrica"
    }
  },
  "api": {
    "baseUrl": ["https://api.chidori.africa/enterprise-service", "https://sandbox.chidori.africa/enterprise-service"],
    "auth": {
      "method": "key",
      "name": "X-API-Key"
    }
  }
